extends ../layouts/default.pug

block main
	main.main
		h1.box-title Thông tin cá nhân 

		.section-8
			form(action="")
				.inner-group 
					label.inner-label(for="fullName") Họ tên
					input(type="text" id="fullName" name="fullName" value="Lê Văn A")
				.inner-group 
					label.inner-label(for="email") Email
					input(type="email" id="email" name="email" value="levana@gmail.com")
				.inner-group 
					label.inner-label(for="phone") Số điện thoại
					input(type="text" id="phone" name="phone" value="0123456789")
				.inner-group 
					label.inner-label Chức vụ
					input(type="text" value="Giám đốc" readonly)
				.inner-group 
					label.inner-label Nhóm quyền
					input(type="text" value="Quản trị viên" readonly)
				.inner-group.inner-two-col
					label.inner-label(for="avatar") Ảnh đại diện
					.inner-upload-image
						input(type="file" id="avatar" name="avatar" filepond-image)
				.inner-button.inner-two-col
					button Cập nhật
			.inner-back 
				a(href=`/${pathAdmin}/profile/change-password`) Đổi mật khẩu
