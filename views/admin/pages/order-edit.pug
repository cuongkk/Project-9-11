extends ../layouts/default.pug

block main
	main.main
		h1.box-title Đơn hàng OD000001
		.section-8
			form(action="" id="order-edit-form")
				.inner-group 
					label.inner-label(for="fullName") Tên khách hàng *
					input(type="text" id="fullName" name="fullName" placeholder="Lê Văn A")
				.inner-group 
					label.inner-label(for="phone") Số điện thoại
					input(type="text" id="phone" name="phone" placeholder="0123456789")
				.inner-group.inner-two-col
					label.inner-label(for="note") Ghi chú
					textarea(id="note" name="note") Test...
				.inner-group 
					label.inner-label(for="paymentMethod") Phương thức thanh toán
					select(id="paymentMethod" name="paymentMethod")
						option(value="money") Tiền mặt
						option(value="bank") Chuyển khoản
						option(value="momo") Ví Momo
						option(value="zalopay") ZaloPay
						option(value="vnpay") VNPay
				.inner-group 
					label.inner-label(for="paymentStatus") Trạng thái thanh toán
					select(id="paymentStatus" name="paymentStatus")
						option(value="paid") Đã thanh toán
						option(value="unpaid") Chưa thanh toán
				.inner-group 
					label.inner-label Ngày đặt
					input(type="text" value="16:40 - 01/01/2024" readonly)
				.inner-group 
					label.inner-label(for="status") Trạng thái
					select(id="status" name="status")
						option(value="created") Khởi tạo
						option(value="completed") Hoàn thành
						option(value="canceled") Đã hủy
				.inner-group
					label(class="inner-label") Danh sách tour
					.inner-order-list
						.inner-order-item
							.inner-order-image
								img(src="/admin/assets/images/image-tour.png", alt="Tour Hạ Long")
							.inner-order-content
								.inner-order-name Tour Hạ Long
								.inner-order-text Người lớn: 3 x 1.500.000đ
								.inner-order-text Trẻ em: 2 x 1.300.000đ
								.inner-order-text Em bé: 2 x 1.000.000đ
								.inner-order-text Ngày khởi hành: 20/10/2024
								.inner-order-text Khởi hành tại: Hà Nội
						.inner-order-item
							.inner-order-image
								img(src="/admin/assets/images/image-tour.png", alt="Tour Hạ Long")
							.inner-order-content
								.inner-order-name Tour Hạ Long
								.inner-order-text Người lớn: 3 x 1.500.000đ
								.inner-order-text Trẻ em: 2 x 1.300.000đ
								.inner-order-text Em bé: 2 x 1.000.000đ
								.inner-order-text Ngày khởi hành: 20/10/2024
								.inner-order-text Khởi hành tại: Hà Nội
				.inner-group
					label(class="inner-label") Thanh toán
						.inner-order-total
							div Tổng tiền: 10.000.000đ
							div Giảm: 400.000đ
							div Mã giảm: TOURMUAHE2024
							div Thanh toán: <span class="inner-order-price">9.600.000đ</span>
				.inner-button.inner-two-col
					button Cập nhật
			.inner-back 
				a(href=`/${pathAdmin}/order/list`) Quay lại danh sách
