extends ../layouts/account.pug
include ../mixins/checkbox-30.pug

block main
  .form-account
    h1.inner-title Đổi mật khẩu
    .inner-desc Vui lòng nhập mật khẩu để tiếp tục
    form(action="" class="inner-form")
      .inner-group
        label(for="password") Mật khẩu mới 
        input(
          type="password" 
          id="password" 
          name="password" 
          class="inner-control")
      .inner-group
        label(for="password") Xác nhận mật khẩu
        input(
          type="password"
          id="password"
          name="password"
          class="inner-control")
      button.inner-button Đổi mật khẩu
      .inner-more
        span Bạn đã nhớ mật khẩu?
        a(href=`/${pathAdmin}/account/login` class="inner-link") Đăng nhập