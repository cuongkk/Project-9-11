extends ../layouts/default.pug
include ../mixins/checkbox-30.pug

block main
	main.main
		h1.box-title Tạo tour
		.section-8
			form(action="" id="tour-create-form")
				.inner-group 
					label.inner-label(for="name") Tên tour
					input(type="text" id="name" name="name" placeholder="Nhập tên tour")
				.inner-group 
					label.inner-label(for="parent") Danh mục 
					select(id="parent" name="parent")
						option(value="") -- Chọn danh mục --
						option(value="1") Danh mục 1
						option(value="2") Danh mục 2
				.inner-group 
					label.inner-label(for="position") Vị trí
					input(type="text" id="position" name="position" placeholder="Nhập vị trí hiển thị")
				.inner-group 
					label.inner-label(for="status") Trạng thái
					select(id="status" name="status")
						option(value="1") Hoạt động
						option(value="2") Tạm dừng
				.inner-group.inner-two-col
					label.inner-label(for="avatar") Ảnh đại diện
					.inner-upload-image
						input(type="file" id="avatar" name="avatar" filepond-image)        
				.inner-group 
					label.inner-label Giá cũ
					.inner-list
						.inner-item 
							label.inner-label(for="old-price-adult") Người lớn
							input(type="text" id="old-price-adult" name="oldPriceAdult") 
						.inner-item 
							label.inner-label(for="old-price-child") Trẻ em
							input(type="text" id="old-price-child" name="oldPriceChild") 
						.inner-item
							label.inner-label(for="old-price-baby") Em bé
							input(type="text" id="old-price-baby" name="oldPriceBaby") 
				.inner-group 
					label.inner-label Giá mới
					.inner-list
						.inner-item 
							label.inner-label(for="new-price-adult") Người lớn
							input(type="text" id="new-price-adult" name="newPriceAdult") 
						.inner-item 
							label.inner-label(for="new-price-child") Trẻ em
							input(type="text" id="new-price-child" name="newPriceChild") 
						.inner-item
							label.inner-label(for="new-price-baby") Em bé
							input(type="text" id="new-price-baby" name="newPriceBaby") 
				.inner-group 
					label.inner-label Còn lại 
					.inner-list
						.inner-item 
							label.inner-label(for="adult") Người lớn
							input(type="text" id="adult" name="stockAdult") 
						.inner-item 
							label.inner-label(for="child") Trẻ em
							input(type="text" id="child" name="stockChild") 
						.inner-item
							label.inner-label(for="baby") Em bé
							input(type="text" id="baby" name="stockBaby")
				.inner-group 
					label.inner-label Những địa điểm 
					.inner-checkbox 
						.inner-item 
							+checkbox-30("loacation","loacation-1","id-ha-noi")
							label(for="loacation-1") Hà Nội
						.inner-item 
							+checkbox-30("loacation","loacation-2","id-ho-chi-minh")
							label(for="loacation-2") Hồ Chí Minh
						.inner-item 
							+checkbox-30("loacation","loacation-3","id-da-nang")
							label(for="loacation-3") Đà Nẵng
						.inner-item 
							+checkbox-30("loacation","loacation-4","id-nha-trang")
							label(for="loacation-4") Nha Trang
				.inner-group 
					label.inner-label(for="duration") Thời gian
					input(type="text" id="duration" name="duration" placeholder="Nhập thời gian")
				.inner-group
					label.inner-label(for="transportation") Phương tiện
					input(type="text" id="transportation" name="transportation" placeholder="Nhập phương tiện")
				.inner-group
					label.inner-label(for="departure-date") Ngày khởi hành
					input(type="date" id="departure-date" name="departureDate" placeholder="Nhập ngày khởi hành")
				.inner-group.inner-two-col
					label.inner-label(for="description") Thông tin tour 
					textarea(id="description" name="description")
				.inner-group.inner-two-col
					label.inner-label Lịch trình tour
					.inner-schedule
						.inner-schedule-list
							.inner-schedule-item 
								.inner-schedule-head
									.inner-schedule-button.inner-move
										<i class="fa-solid fa-up-down-left-right inner-move"></i>
									input(class="inner-input" type="text")
									.inner-schedule-button.inner-remove
										<i class="fa-solid fa-trash-can"></i>
									.inner-schedule-button.inner-more
										<i class="fa-solid fa-angle-down"></i>
								.inner-schedule-body
									textarea(class="inner-textarea" textarea-mce)
							.inner-schedule-item 
								.inner-schedule-head
									.inner-schedule-button.inner-move
										<i class="fa-solid fa-up-down-left-right inner-move"></i>
									input(class="inner-input" type="text")
									.inner-schedule-button.inner-remove
										<i class="fa-solid fa-trash-can"></i>
									.inner-schedule-button.inner-more
										<i class="fa-solid fa-angle-down"></i>
								.inner-schedule-body
									textarea(class="inner-textarea" textarea-mce)
						.inner-schedule-create + Thêm lịch trình
				.inner-button.inner-two-col
					button Tạo mới
			.inner-back 
				a(href=`/${pathAdmin}/tour/list`) Quay lại danh sách
		