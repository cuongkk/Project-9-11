extends ../layouts/account.pug
include ../mixins/checkbox-30.pug

block main
  .form-account
    h1.inner-title Đăng ký
    .inner-desc Tạo một tài khoản để tiếp tục
    form(action="" class="inner-form")
      .inner-group
        label(for="name") Họ tên
        input(
          type="text"
          id="name"
          name="name"
          placeholder="Ví dụ: Lê Văn A"
          class="inner-control")
      .inner-group
        label(for="email") Email 
        input(
          type="email" 
          id="email" 
          name="email" 
          placeholder="Ví dụ: levana@gmail.com"
          class="inner-control")
      .inner-group
        label(for="password") Mật khẩu
        input(
          type="password"
          id="password"
          name="password"
          class="inner-control")
      .inner-meta 
        .inner-confirm 
          +checkbox-30("accept", "accept")
          label(
            for="accept"
          ) Tôi chấp nhận các điều khoản và điều kiện
        a(href=`/${pathAdmin}/account/forgot-password` class="inner-link") Quên mật khẩu?
      button.inner-button Đăng Ký
      .inner-more
        span Bạn đã có tài khoản?
        a(href=`/${pathAdmin}/account/login` class="inner-link") Đăng nhập